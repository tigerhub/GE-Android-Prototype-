<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_contact_page"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="manda094.finalproject.HomeScreen"
    android:background="@drawable/contactpage">


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/ge_logo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/contacthome_btn"
        android:scaleType="fitCenter"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/contact_name"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:hint="@string/full_name"
        android:layout_above="@+id/contactsave_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp" />

    <TextView
        android:text="@string/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact"
        android:textSize="38sp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Save"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/contactsave_btn"
        android:onClick="save_contact"
        android:background="@color/green"
        android:textColor="@color/white"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/contacthome_btn"
        android:layout_alignEnd="@+id/contact" />

    <Button
        android:text="Cancel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/cancel_btn"
        android:onClick="cancel_contact"
        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_below="@+id/contact_name"
        android:layout_alignStart="@+id/contact" />

</RelativeLayout>
