<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/viewmachines">


    <TextView
        android:text="@string/viewanom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewmanom_title"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="35sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="20dp">

        <Button
            android:text="@string/sendreport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sendReport_btn"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:background="@drawable/contactbtn1"
            android:gravity="center_vertical|center_horizontal|center"
            android:layout_weight="1"
            android:paddingLeft="15dp" />
    </LinearLayout>

    <ListView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:id="@+id/Anom_lv"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/ge_logo"
        android:id="@+id/viewmachinehome_btn"
        android:scaleType="fitCenter"
        android:layout_marginStart="310dp"
        android:layout_marginTop="20dp"

        />


</LinearLayout>